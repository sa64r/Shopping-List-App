<% layout('layouts/authorised-boilerplate') %>

    <h1>Shopping List</h1>

    <ul>
        <% for (let item of items){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= item.title %>
                            </h5>
                            <p class="card-text">
                                <%= item.quantity %>
                            </p>
                            <div class="d-inline">
                                <a href="/items/<%=item._id%>" class="btn btn-primary">More Information</a>
                                <a href="/items/<%=item._id%>/edit" class="btn btn-success">Edit</a>
                                <form action="" class="d-inline float-right">
                                    <button class="btn btn-danger">Remove</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>